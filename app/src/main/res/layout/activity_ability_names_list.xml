<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.app.settings.AbilityNamesList">

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/linearLayout"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <EditText
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:inputType="textPersonName"
      android:ems="10"
      android:id="@+id/ABILITY_EDIT_NAME_ID"
      android:layout_weight="1"
      android:hint="@string/add_enemy_achieve_placeholder"/>

    <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@mipmap/baseline_add_black_18dp"
      android:id="@+id/ABILITY_EDIT_ADD_BTN_ID"
      android:layout_weight="0"
      style="@style/common_action_button"/>

  </LinearLayout>

  <fragment
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.example.masterhelper.ui.recyclerViewFragment.RecyclerViewFragment"
    android:id="@+id/ABILITY_LIST_ID"
    android:layout_weight="1"
    tools:layout="@layout/fragment_view_journey_item"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>