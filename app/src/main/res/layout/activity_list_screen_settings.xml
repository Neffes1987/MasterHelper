<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.com.masterhelper.settings.ui.SettingList">

  <fragment
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.example.com.masterhelper.core.listFactory.ListFactory"
    android:id="@+id/EXISTED_SETTINGS_LIST_ID"
    android:layout_weight="1"
    tools:layout="@layout/fragment_view_list_item_row"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintTop_toTopOf="parent"/>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:src="@mipmap/baseline_add_black_18dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/SETTING_EDIT_ADD_BTN_ID"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    style="@style/float_button_styles"/>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:src="@mipmap/baseline_done_black_18dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:layout_constraintEnd_toEndOf="parent"
    style="@style/float_secondary_button"
    android:id="@+id/SETTINGS_APPLY_BTN_ID"
    app:layout_constraintBottom_toTopOf="@+id/SETTING_EDIT_ADD_BTN_ID"
    android:layout_marginBottom="16dp"
    android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>