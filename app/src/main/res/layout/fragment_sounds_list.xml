<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.soundsList.SoundsList"
  >

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:src="@mipmap/baseline_add_black_18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/float_button_styles"
    android:id="@+id/ADD_NEW_FILE_ID"
    android:layout_gravity="bottom|end"/>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:src="@mipmap/baseline_done_black_18dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/ADD_FILES_TO_EVENT_ID"
    android:layout_gravity="bottom|right"
    style="@style/float_button_styles"
    android:visibility="gone"/>

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
      android:text="@string/library_music"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/textView2"
      android:textAlignment="center"
      android:textAllCaps="false"/>

    <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:listitem="@layout/fragment_sounds_item"
      android:id="@+id/SOUNDS_LIST_ID"/>

  </LinearLayout>

</FrameLayout>