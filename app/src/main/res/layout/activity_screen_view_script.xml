<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Script">

  <androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:listitem="@layout/fragment_view_enemy_icon"
    tools:spanCount="5"
    tools:layoutManager="GridLayoutManager"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/ENEMIES_GRID_ID"/>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    app:srcCompat="@mipmap/baseline_add_black_18dp"
    android:id="@+id/CREATE_NEW_ENEMY_ID"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintHorizontal_bias="0.954"
    app:layout_constraintEnd_toEndOf="@+id/ENEMIES_GRID_ID"
    app:layout_constraintVertical_bias="1.0"
    app:layout_constraintTop_toTopOf="parent"
    style="@style/addButtonStyles"/>
</androidx.constraintlayout.widget.ConstraintLayout>