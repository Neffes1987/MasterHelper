<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".ui.viewCharacteristicRow.ViewCharacteristicRow"
             android:paddingTop="10dp"
             android:paddingBottom="10dp">

  <!-- TODO: Update blank fragment layout -->
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="@string/name"
      android:id="@+id/ROW_TITLE_ID"
      android:layout_weight="2"
      android:gravity="center_vertical"/>

    <View
      android:layout_width="10dp"
      android:layout_height="match_parent"
      android:background="#00FFFFFF"
      android:layout_weight="0"/>

    <TextView
      android:text="@string/empty_value"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:id="@+id/ROW_VALUE_ID"
      android:layout_weight="2"
      android:textAlignment="viewEnd"
      android:gravity="center_vertical"/>

    <View
      android:layout_width="10dp"
      android:layout_height="match_parent"
      android:background="#00FFFFFF"
      android:layout_weight="0"/>

    <ImageButton
      android:src="@mipmap/baseline_remove_circle_outline_black_18dp"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:id="@+id/ROW_DECREASE_VALUE_ID"
      android:layout_weight="1"
      android:background="#00FFFFFF"/>

    <View
      android:layout_width="10dp"
      android:layout_height="match_parent"
      android:background="#00FFFFFF"
      android:layout_weight="0"/>

    <ImageButton
      android:src="@mipmap/baseline_add_circle_outline_black_18dp"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:id="@+id/ROW_INCREASE_VALUE_ID"
      android:layout_weight="1"
      android:background="#00FFFFFF"/>

  </LinearLayout>

</FrameLayout>