<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".EditEnemy">

  <EditText
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:ems="10"
    android:id="@+id/ENEMY_EDIT_NAME_ID"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/GENERATE_NAME_BTN_ID2"
    android:hint="@string/add_enemy_title_placeholder"/>

  <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@android:drawable/ic_menu_rotate"
    android:id="@+id/GENERATE_NAME_BTN_ID2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/scrollView2"
    app:layout_constraintVertical_bias="0.0"/>

  <ScrollView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/SCRIPT_ENEMY_BOTTOM_BUTTONS"
    android:paddingBottom="80dp"
    android:paddingTop="20dp"
    app:layout_constraintTop_toBottomOf="@+id/ENEMY_EDIT_NAME_ID"
    app:layout_constraintVertical_bias="0.0">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ENEMY_ABILITIES_ROW_WRAPPER_ID"
        >
      </LinearLayout>

      <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.masterhelper.ui.viewCharacteristicRow.ViewCharacteristicRow"
        android:id="@+id/ADD_NEW_CHARACTERISTIC_ID"
        tools:layout="@layout/fragment_view_characteristic_row"/>

      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="start|top"
        android:ems="10"
        android:id="@+id/ENEMY_EDIT_DESCRIPTION_ID"/>

    </LinearLayout>
  </ScrollView>

  <fragment
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.example.masterhelper.ui.ScriptBottomButtonsFragment.ScriptBottomButtonsFragment"
    android:id="@+id/SCRIPT_ENEMY_BOTTOM_BUTTONS"
    tools:layout="@layout/fragment_script_bottom_buttons"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>