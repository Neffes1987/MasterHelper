<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  style="@style/ConstraintLayoutStyled"
  tools:context=".ui.scene.Scene"
  android:isScrollContainer="true">

  <fragment
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:name="com.example.masterhelper.ui.recyclerViewFragment.RecyclerViewFragment"
    android:id="@+id/SCREEN_SCRIPTS_LIST_ID"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:layout="@layout/fragment_recycler_view"/>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:srcCompat="@mipmap/baseline_add_black_18dp"
    android:id="@+id/SCRIPT_CREATE_NEW_BTN_ID"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="@+id/SCREEN_SCRIPTS_LIST_ID"
    app:layout_constraintTop_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/SCREEN_SCRIPTS_LIST_ID"
    app:layout_constraintVertical_bias="1.0"
    android:layout_marginBottom="8dp"
    app:layout_constraintHorizontal_bias="1.0"
    android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>