<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ScriptAboutView">

  <androidx.cardview.widget.CardView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TextView
        android:text="@string/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/rowStyled"
        android:id="@+id/enemy_name_id"/>

      <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.masterhelper.view_characteristic_row"
        android:id="@+id/health_fragment_id"
        tools:layout="@layout/fragment_view_characteristic_row"/>

      <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.masterhelper.view_characteristic_row"
        android:id="@+id/damage_fragment_id"
        tools:layout="@layout/fragment_view_characteristic_row"/>

      <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.example.masterhelper.view_characteristic_row"
        android:id="@+id/ordering_fragment_id"
        tools:layout="@layout/fragment_view_characteristic_row"/>

      <TextView
        android:text="@string/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/rowStyled"
        android:id="@+id/enemy_description_id"/>

      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@mipmap/baseline_queue_black_18dp"
          android:id="@+id/imageButton2"
          android:layout_weight="1"/>

        <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@mipmap/baseline_create_black_18dp"
          android:id="@+id/imageButton"
          android:layout_weight="1"/>

        <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@mipmap/baseline_forward_black_18dp"
          android:id="@+id/imageButton3"
          android:layout_weight="1"/>

      </LinearLayout>

    </LinearLayout>

  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>