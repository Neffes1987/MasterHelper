<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

  <CheckBox
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/FILE_NAME_SELECTOR_ID"
    />

  <TextView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:id="@+id/FILE_NAME_ID"
    android:layout_weight="2"
    android:gravity="center_vertical"/>

  <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@mipmap/baseline_clear_black_18dp"
    android:id="@+id/MUSIC_DELETE_ROW_ID"
    android:layout_weight="0"
    style="@style/delete_action_button"/>

  <ImageButton
    app:srcCompat="@mipmap/baseline_play_arrow_black_18dp"
    android:id="@+id/RUN_MUSIC_FILE_ID"
    style="@style/common_action_button"/>

  <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:srcCompat="@mipmap/baseline_pause_black_18dp"
    android:id="@+id/STOP_MUSIC_FILE_ID"
    android:layout_weight="0"
    style="@style/delete_action_button"
    tools:visibility="gone"/>

</LinearLayout>
