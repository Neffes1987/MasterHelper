<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.About" parent="Base.Theme.AppCompat.Dialog.Alert">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="ConstraintLayoutStyled">
    <item name="android:layout_marginLeft">2dp</item>
    <item name="android:layout_marginRight">2dp</item>
  </style>

  <style name="ConstraintLayoutPaddingStyled">
    <item name="android:paddingLeft">2dp</item>
    <item name="android:paddingRight">2dp</item>
  </style>

  <style name="rowStyled">
    <item name="android:minHeight">40dp</item>
    <item name="android:padding">8dp</item>
  </style>

  <style name="EnemyTableCaption">
    <item name="android:layout_width">90dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">0</item>
    <item name="android:paddingRight">8dp</item>
    <item name="android:paddingBottom">8dp</item>
  </style>



  <style name="common_action_button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">0</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:tint">@color/colorCommon</item>
    <item name="android:textColor">@color/colorCommon</item>
  </style>

  <style name="float_button_styles" parent="common_action_button">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:clickable">true</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:layout_marginRight">8dp</item>
    <item name="android:backgroundTint">@color/colorFloatBtnBackground</item>
    <item name="android:focusable">true</item>
  </style>

  <style name="delete_action_button"  parent="common_action_button">
    <item name="android:tint">@color/colorDelete</item>
    <item name="android:textColor">@color/colorDelete</item>
    <item name="android:foregroundGravity">clip_horizontal|center_horizontal</item>
  </style>
</resources>
